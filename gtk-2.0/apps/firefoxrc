style "firefox-entry" {
	GtkWidget::interior-focus = 0
	GtkEntry::inner-border    = {2,2,2,2}
	xthickness = 0
	ythickness = 0
	bg[NORMAL] = shade(0.76,@bg_color)

	engine "pixmap" {
		image {
			function = FOCUS
		}
	}
}
widget	"MozillaGtkWidget*GtkFixed*GtkEntry*" style:highest "firefox-entry"

